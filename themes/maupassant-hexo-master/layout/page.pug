extends base
block title
  title= page.title + ' | ' + config.title
block content
  .post-03
  .post
    .post-content
      != page.content
  if page.donate
      iframe(src='/donate/?AliPayQR=' + theme.donate.alipay_qr + '&WeChatQR=' + theme.donate.wechat_qr + '&GitHub=' + theme.donate.github, style='overflow-x:hidden; overflow-y:hidden; border:0xp none #fff; min-height:240px; width:100%;', frameborder='0', scrolling='no')
  if page.comments
    include _partial/comments.pug
